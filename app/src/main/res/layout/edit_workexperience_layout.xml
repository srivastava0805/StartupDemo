<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editwexp_edittext_jobtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin_15dp"
        android:hint="@string/job_title"
        android:inputType="textPersonName"
        android:paddingStart="@dimen/activity_vertical_margin_15dp"
        android:paddingEnd="@dimen/activity_vertical_margin_15dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editwexp_edittext_companyname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin_15dp"
        android:hint="@string/company_name"
        android:inputType="number"
        android:paddingStart="@dimen/activity_vertical_margin_15dp"
        android:paddingEnd="@dimen/activity_vertical_margin_15dp"
        app:layout_constraintTop_toBottomOf="@+id/editwexp_edittext_jobtitle" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editwexp_edittext_jobindustry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin_15dp"
        android:hint="@string/job_industry"
        android:inputType="number"
        android:paddingStart="@dimen/activity_vertical_margin_15dp"
        android:paddingEnd="@dimen/activity_vertical_margin_15dp"
        app:layout_constraintTop_toBottomOf="@+id/editwexp_edittext_companyname" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editwexp_edittext_areaofexpertise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin_15dp"
        android:hint="@string/area_of_expertise"
        android:inputType="number"
        android:paddingStart="@dimen/activity_vertical_margin_15dp"
        android:paddingEnd="@dimen/activity_vertical_margin_15dp"
        app:layout_constraintTop_toBottomOf="@+id/editwexp_edittext_jobindustry" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/editwexp_edittext_expplaceholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin_15dp"
        android:hint="@string/experience"
        android:textStyle="bold"
        android:paddingStart="@dimen/activity_vertical_margin_15dp"
        android:paddingEnd="@dimen/activity_vertical_margin_15dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/editwexp_edittext_areaofexpertise" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/editwexp_edittext_fromdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin_15dp"
        android:hint="@string/from_date"
        android:paddingStart="@dimen/activity_vertical_margin_15dp"
        android:paddingEnd="@dimen/activity_vertical_margin_15dp"
        android:textColor="@color/black"
        android:drawableEnd="@drawable/icon_arrow_down_filled"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:drawable/edit_text"
        app:layout_constraintEnd_toStartOf="@+id/editwexp_edittext_todate"
        app:layout_constraintTop_toBottomOf="@+id/editwexp_edittext_expplaceholder" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/editwexp_edittext_todate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin_15dp"
        android:hint="@string/to_date"
        android:paddingStart="@dimen/activity_vertical_margin_15dp"
        android:paddingEnd="@dimen/activity_vertical_margin_15dp"
        android:textColor="@color/black"
        android:background="@android:drawable/edit_text"
        android:drawableEnd="@drawable/icon_arrow_down_filled"
        app:layout_constraintStart_toEndOf="@+id/editwexp_edittext_fromdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editwexp_edittext_expplaceholder" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/editwexp_edittext_fromdate"
        android:text="@string/i_currently_work_here"/>


</androidx.constraintlayout.widget.ConstraintLayout>