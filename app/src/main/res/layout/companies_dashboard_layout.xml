<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/companies_textview_topjobsplaceholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/top_startups_hiring_right_now"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="15sp"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/companies_textview_viewall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_all"
        android:textStyle="bold"
        android:padding="4dp"
        android:textColor="@color/color_btn_navy_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="15sp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/companies_recyclerview_companies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/companies_textview_topjobsplaceholder"
        android:layout_marginTop="@dimen/activity_vertical_margin_10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>