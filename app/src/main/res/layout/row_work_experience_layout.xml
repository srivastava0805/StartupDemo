<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rowworkexp_textview_designation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin_5dp"
        android:textColor="@color/color_primary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/rowworkexp_iv_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_edit_profile"
        android:padding="@dimen/activity_vertical_margin_5dp"
        app:layout_constraintEnd_toStartOf="@+id/rowworkexp_iv_delete"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/rowworkexp_iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin_5dp"
        android:src="@drawable/icon_delete_work_experience_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rowworkexp_textview_companyname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin20"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:gravity="center"
        android:drawableStart="@drawable/icon_arrow_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rowworkexp_textview_designation" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rowworkexp_textview_workedtimeduration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="center"
        android:drawableStart="@drawable/icon_arrow_right"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rowworkexp_textview_companyname" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rowworkexp_textview_industrytype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:gravity="center"
        android:drawableStart="@drawable/icon_arrow_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rowworkexp_textview_workedtimeduration" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rowworkexp_textview_functinalarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:gravity="center"
        android:drawableStart="@drawable/icon_arrow_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rowworkexp_textview_industrytype" />


</androidx.constraintlayout.widget.ConstraintLayout>