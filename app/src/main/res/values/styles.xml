    <style name="CustomMaterialThemeLight" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_blue_btn_enabled</item>
        <item name="colorPrimaryDark">@color/color_light_gray_icon</item>
        <item name="colorAccent">@color/color_orange_btn_enabled</item>

        <item name="android:statusBarColor">@color/color_white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>

    </style>

    <style name="contentInputLayoutStyleOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/color_box_stroke</item>
        <item name="android:textColor">@color/color_black_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColorHint">@color/color_light_gray_icon</item>
        <item name="errorTextColor">@color/color_red</item>
        <item name="boxStrokeErrorColor">@color/color_red</item>
        <item name="errorIconTint">@color/color_red</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/activity_vertical_margin_15dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/activity_vertical_margin_15dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/activity_vertical_margin_15dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/activity_vertical_margin_15dp</item>
        <!--        <item name="errorTextAppearance">@style/error_label</item>-->
        <!--        <item name="hintTextAppearance">@style/text_label</item>-->
    </style>

    <style name="contentInputLayoutStyleDefault" parent="Widget.Design.TextInputLayout">
        <item name="boxStrokeColor">@color/color_blue_btn_enabled</item>
        <item name="android:textColor">@color/color_black_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColorHint">@color/color_blue_btn_enabled</item>
        <item name="errorTextColor">@color/color_red</item>
        <item name="boxStrokeErrorColor">@color/color_red</item>
        <item name="theme">@style/EditTextThemeOverlayDefault</item>
        <item name="errorIconTint">@color/color_red</item>
        <!--        <item name="errorTextAppearance">@style/error_label</item>-->
        <item name="hintTextAppearance">@style/HelperTextAppearanceDefault</item>
    </style>



    <style name="EditTextThemeOverlayDefault" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/color_blue_btn_enabled</item>
    </style>

    <style name="HelperTextAppearanceDefault" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color_blue_btn_enabled</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">top</item>

    </style>


    <style name="OrangeMaterialButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/color_states_materialbutton_orange</item>
    </style>

    <style name="BlueMaterialButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/color_states_materialbutton_blue</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundCornerImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5%</item>
    </style>


    <style name="HelperTextAppearanceDefault2" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/color_blue_btn_enabled</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">top</item>
        <item name="paddingStart">3dp</item>
    </style>

<!--    <style name="CustomMaterialThemeLight.NoActionBar">-->
<!--        <item name="windowActionBar">false</item>-->
<!--        <item name="windowNoTitle">true</item>-->
<!--    </style>-->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/color_light_gray_icon</item>
    </style>


    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/color_btn_navy_blue</item>
        <item name="tabIndicatorHeight">5dp</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabIndicator">@drawable/custom_indicator</item>
        <item name="tabTextColor">@color/color_light_gray_icon</item>
        <item name="tabBackground">@drawable/unselected_tab_indicator_color</item>
        <item name="tabSelectedTextColor">@color/color_btn_navy_blue</item>
    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyCustomSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/checkbox_active_color</item>
        <item name="colorSwitchThumbNormal">@color/color_icon_gray_dark</item>
        <item name="android:colorForeground">#124964</item>
    </style>
</resources>